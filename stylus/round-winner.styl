@keyframes roundWinnerBackgroundAndInner {
	from,
	15% {
		transform-origin: top
		transform: scaleY(0%)
		opacity 0
	}

	to {
		transform-origin: top
		transform: scaleY(100%)
	}
}

.round-winner {

	&.active-enter-active {
		.background,
		.flag,
		.inner {
			animation roundWinnerBackgroundAndInner .4s backwards ease
		}
	}

	&.active-leave-active {
		.background,
		.flag,
		.inner {
			animation roundWinnerBackgroundAndInner .4s forwards ease reverse
		}
	}

	transition: all 1s ease-in-out

	width 30vw
	margin 0 auto

	&.--t {

		// teamColors()
		// position absolute
		// height 4.5rem
		// top 8.5rem
		// left 102.05rem
		// width 48.25rem	

		&.--false {
			teamColors()
			position absolute
			height 4.5rem
			top 8.5rem
			left 102.05rem
			width 48.25rem		
		}

		&.--true {
			teamColors()
			position absolute
			height 4.5rem
			top 8.5rem
			right 102.05rem
			width 49.33rem
		}
	}

	&.--ct {

		// teamColors()
