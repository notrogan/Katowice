.sidebar {
	opacity: 1
	.iem {
		.iem-logo {
			// border 1px solid red
			opacity: 1
			top 14.5rem
			width: 205px

			position relative
			left 8.55rem
		}	
		&.--left {
			opacity:0
		}
	}

	.esl {
		.esl-logo {
			opacity: 0
			border-radius: 10px
			top 6.75rem
			width: 398px

			position relative
			right 0.3rem
		}
		.esl-text {
			opacity: 0
			color #FFFFFF
			font-size 2rem
			position relative
			bottom 0.75rem
			right 9.5rem
			line-height: 3.45rem
		}
		&.--right {
			opacity: 0
		}
	}
	position absolute
	bottom $generalPaddingY

	filter drop-shadow(0 0 .4rem rgba(#000, .5))
	transition transform .5s ease

	&.--left {
		left $generalPaddingX
	}

	&.--right {
		right $generalPaddingX

		.economy,
		.utility {
			margin-left auto
		}
	}

	&.--series-active {
		$seriesHeight = 17.9rem
		// transform translateY(-($seriesHeight + 1rem))
	}

	.economy,
	.utility {
		width 70.25% // TODO should probably not be hardcoded
	}

	@require 'sidebar/economy'
	@require 'sidebar/player'
	@require 'sidebar/utility'
}
