.clock {
	height: 7rem
	grid-area clock
	// border 1px solid red
	display flex
	align-items center
	flex-direction column
	justify-content space-evenly
	background rgba(6, 33, 73, 0.95)
	// border 1px solid

	.time {
		z-index 999
		// border 1px solid red
		// z-index 999
		flsize(3.5rem, 1)

		&.--red {
			color $red
		}

		.warmup {
			flsize(1.5rem, 1.1667)

			color #fff
			letter-spacing .15em
			text-transform uppercase
		}

		.digit {
			display inline-block
		}
	}

	.round-no {
		z-index 99
		position relative
		top 0.1rem
		flsize(1.5rem, 1)
	}

	.images {
		z-index 999
		center()
	}

	.bomb {
		opacity: 0
		// z-index -1
		position relative
		bottom 0rem
		size absolute
		width 139px
		height 80px
		// border 1px solid red
		// background: red
	}


	img,
	svg {
		position absolute
		left 47.2rem
		bottom 2.2rem
		// opacity: 0
		z-index 999
		display block
		height 5.75rem
		margin 0 .4rem
	}

	.img:not(.--c4) svg {
		z-index 999
		transform scale(.9)
	}
}