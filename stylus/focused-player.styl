.focused-player {
	position absolute
	bottom $generalPaddingY
	left $generalPaddingX
	right $generalPaddingX

	display flex
	align-items flex-end
	justify-content center

	color #fff
	filter drop-shadow(0 0 .4rem rgba(#000, .5))
	transition opacity .3s ease

	&:not(.--active) {
		opacity 0
	}

	.team {
		.team-logo {
			z-index 999
			// border 1px solid
			position relative
			left 77.8rem
			bottom 13.9rem
			height 3.15rem
			width 3.15rem
		}
	}

	.teamflag {
		.team-flag {
			z-index 999
			opacity 1
			// border 1px solid
			position relative
			left 106rem
			bottom 13.9rem
			height 3.15rem
			width 3.15rem
		}
	}

	@require 'focused-player/shared-ammo-life'
	@require 'focused-player/ammo'
	@require 'focused-player/center'
	@require 'focused-player/life'
}
