.ammo {
	opacity 1
	position: relative
	right 13rem
	bottom:10rem
	
	flsize(2.5rem, 1)

	&,
	.inner {
		margin-right auto
	}

	.inner {
		// border: 1px solid green
		margin-right auto
		padding 0 0rem 0 -1rem
		// transform skewX(-20deg)
		opacity 1
	}

	&:not(.--active) {
		opacity 0
	}

	.current,
	.reserve-wrapper {
		padding .6rem 0
		// transform skewX(20deg)


		.number {
			width 3ch
			text-align right
		}
	}

	.reserve-wrapper {
		display flex
		align-items flex-end
	}

	.reserve {
		flsize(1.75rem, 1.3)

		.number {
			display inline-flex
			justify-content flex-start
			width 4ch
		}
	}
}
